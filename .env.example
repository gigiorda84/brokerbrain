# .env.example — BrokerBot Configuration
# Copy to .env and fill in your values

# ─── LLM ───────────────────────────────────────
# Provider: "deepinfra" (cloud) or "ollama" (local)
LLM_PROVIDER=deepinfra

# DeepInfra settings (when LLM_PROVIDER=deepinfra)
DEEPINFRA_API_KEY=your_key_here
DEEPINFRA_BASE_URL=https://api.deepinfra.com/v1/openai
CONVERSATION_MODEL=Qwen/Qwen3-14B
VISION_MODEL=Qwen/Qwen3-VL-30B-A3B-Instruct

# Ollama settings (when LLM_PROVIDER=ollama)
# OLLAMA_BASE_URL=http://localhost:11434
# CONVERSATION_MODEL=qwen3:8b-q4_K_M
# VISION_MODEL=qwen2.5-vl:7b-q4_K_M

# ─── Database ──────────────────────────────────
DATABASE_URL=postgresql+asyncpg://brokerbot:brokerbot_dev@localhost:5432/brokerbot
REDIS_URL=redis://localhost:6379/0

# ─── Telegram (User Bot) ──────────────────────
TELEGRAM_USER_BOT_TOKEN=your_user_bot_token_here

# ─── Telegram (Admin Bot) ─────────────────────
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_here
ADMIN_TELEGRAM_IDS=your_telegram_user_id

# ─── WhatsApp (Phase 1b) ──────────────────────
# WHATSAPP_API_URL=https://graph.facebook.com/v18.0/YOUR_PHONE_ID
# WHATSAPP_API_TOKEN=your_whatsapp_token
# WHATSAPP_VERIFY_TOKEN=your_verify_token
# WHATSAPP_APP_SECRET=your_meta_app_secret

# ─── Scheduling ────────────────────────────────
# CALCOM_API_URL=https://api.cal.com/v1
# CALCOM_API_KEY=your_calcom_key

# ─── Security ──────────────────────────────────
# Generate with: python -c "import os, base64; print(base64.b64encode(os.urandom(32)).decode())"
ENCRYPTION_KEY=CHANGE_ME_generate_32_byte_base64_key
ADMIN_WEB_PASSWORD=CHANGE_ME_strong_password

# ─── Branding ──────────────────────────────────
BOT_NAME=ameconviene.it
LEGAL_ENTITY=Primo Network Srl
OAM_NUMBER=M94
TOLL_FREE=800.99.00.90
INFO_EMAIL=info@primonetwork.it

# ─── P.IVA Validation (Agenzia delle Entrate) ──
PIVA_ADE_API_KEY=          # From api.agenziaentrate.gov.it API Management portal
PIVA_ADE_API_URL=https://api.agenziaentrate.gov.it/entrate/api/partita-iva/v0/verifica
PIVA_CACHE_TTL=86400
PIVA_VALIDATION_ENABLED=true

# ─── Environment ───────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DOCUMENT_RETENTION_DAYS=30
DATA_RETENTION_MONTHS=12
